<div class='row'>
  <div class='col-sm-6'>
    <div class="well">
      <h3>Pending Connection Requests</h3>
      {{#each member.requests as |request|}}
      <li>{{request.name}} would like to add you as a friend
      <button {{action "addFriend"  member request.sentById request}} class="btn btn-success">+ Add Friend </button></li>
      {{/each}}
    </div>
    <div class="well">
      <h3>My Connections</h3>
      {{#each member.friends as |friend|}}
      <li>{{friend.firstName}} {{friend.lastName}} - {{friend.screenName}} <button {{action "removeFriend" friend member}} class="btn btn-danger"> Remove Friend :( </button></li>
      {{/each}}
    </div>
  </div>
  <div class='col-sm-6'>
    <div class="well">
      <h3>Make a Connection</h3>
      {{#each members as |listMember|}}
      <li>{{listMember.firstName}} {{listMember.lastName}} - {{listMember.screenName}} <button {{action "sendFriendRequest" listMember member}} class="btn btn-warning">Send Friend Request</button></li>
      {{/each}}
    </div>
  </div>
</div>
