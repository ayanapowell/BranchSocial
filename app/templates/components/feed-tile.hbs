<div class="well">
  {{#if isOwner}}
  <div class="edit-options">
    <i id="update-post-icon" {{action 'showForm'}} class="write icon"></i>
    <i id="delete-post-icon" {{action 'deletePost' post}} class="remove icon"></i>
  </div>
  {{/if}}
  <div class="row">
    <div class="col-sm-2 text-center">
      {{#link-to 'member-profile' post.member.id}}<img src={{post.member.avatar}} onerror="this.src='http://www.pngall.com/wp-content/uploads/2016/05/Branch-Free-Download-PNG.png'"  id="post-image">{{/link-to}}<br>
      {{#link-to 'member-profile' post.member.id}}{{post.member.firstName}}{{/link-to}}
    </div>

    <div class="col-sm-10">
      <h4 id="post-content">{{post.content}}</h4>
      <em><small>{{moment-from-now post.date}}</small></em>
      {{#if showForm}}
        <div id="update-post-form">
          {{input value=content placeholder=post.content class='form-control'}}
          <button {{action 'updatePost' post}} class='ui button tiny'>Update</button>
        </div>
      {{/if}}
    </div>
  </div>
  <hr>
  <br>
  {{#each post.comments as |comment|}}
    {{comment-tile comment=comment updateComment="updateComment" deleteComment="deleteComment"}}
  {{/each}}
  <form id="dashboard-comment">
    {{input value=commentContent placeholder="Leave a comment" class="form-control"}}
    <button {{action 'saveComment' post}} class="ui button tiny">
      <i class="comment icon"></i>
      Comment</button>
  </form>
</div>
