<div class="well">
  <div>{{moment-from-now post.date}}</div>
  <p>{{post.member.firstName}}</p>
  <p>{{post.content}}</p>
  <form id="dashboard-comment">
    {{input value=commentContent placeholder="Leave a comment" class="form-control"}}
    <button {{action 'saveComment' post}} class="ui button">comment</button>
  </form>
  {{#if isOwner}}
    <button {{action 'deletePost' post}} class="btn btn-danger">Delete</button>
    <button {{action 'showForm'}} class="btn btn-warning">Update</button>
  {{/if}}
  <br>
  {{#if showForm}}
    <div class="form-group">
      {{input value=content placeholder=post.content class='form-control'}}
    </div>
    <button {{action 'updatePost' post}} class='btn btn-primary'>Post</button>
  {{/if}}
  {{#each post.comments as |comment|}}
    {{comment-tile comment=comment}}
  {{/each}}
</div>
