<h3>Add a member to this Group!</h3>
<form id="searchName">
  <label>Input member's screenname:</label>
  {{input value=searchTerm}}
  <button class="ui button" {{action 'searchName'}}>Search</button>
</form>

{{#if foundMember}}
  <p>Found Member: {{foundMember.screenName}} <button {{action 'addToGroup' foundMember}}>Add to group!</button></p>
  <ul>
    <li>{{foundMember.firstName}}({{foundMember.screenName}})</li>
  </ul>
{{/if}}
