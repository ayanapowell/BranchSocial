<div class="profile-detail">
  <img src={{member.avatar}} onerror="this.src='http://www.pngall.com/wp-content/uploads/2016/05/Branch-Free-Download-PNG.png'">
  {{member.screenName}}
  {{member.firstName}} {{member.lastName}}
  <div class="row">
    <div class="col-md-9">
  {{add-post savePost="savePost" member=member}}

    <h4>News Feed:</h4>
    {{#each member.posts as |post|}}
      {{post-tile post=post deletePost="deletePost" updatePost="updatePost" saveComment="saveComment" member=member}}
    {{/each}}
  </div>
  <div class="col-md-2 col-md-offset-1">
    <h4>Your friends</h4>
    {{#each member.friends as |friend|}}
      {{#link-to 'member-profile' friend.id}} {{friend.screenName}}{{/link-to}}
      {{#link-to 'member-profile' friend.id}}{{friend.firstName}} {{friend.lastName}}{{/link-to}}
      <img src={{friend.avatar}} onerror="this.src='http://www.pngall.com/wp-content/uploads/2016/05/Branch-Free-Download-PNG.png'">
    {{/each}}
  </div>
</div>
</div>
